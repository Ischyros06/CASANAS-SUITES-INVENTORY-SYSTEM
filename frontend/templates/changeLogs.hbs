<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Logs</title>
    <link rel="stylesheet" href="/changeLog.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="brand">
                <a href="/goHomeAdmin" style="font-family: 'Roboto', sans-serif;">Stack Inventory - ADMIN : Change Logs</a>
            </div>
            <ul class="navbar-menu">
                <li>Welcome, <strong style="color: #4C43A2;">{{admin.name}}</strong></li>
                <li><a href="/aboutAdmin">About</a></li>
                <li><a href="/contactAdmin">Contact</a></li>
            </ul>
        </nav>
    </header>

    <aside>
        <ul>
            <li><img src="Casanas Suites.png" alt="Casanas Suites Logo"></li>
            <li><a href="/goHomeAdmin">Home</a></li>
            <li><a href="/status">Status</a></li>
            <li><a href="/report">Reports</a></li>
            <li><a href="/changeLog">Change logs</a></li>
            <li><a href="/needToBuy">Restock List</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </aside>

    <main>
        <div class="header">
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Search anything related...">
                <button onclick="search()">Search</button>
            </div>
        </div>

        <div class="log-container">
            {{#each changeLogs}}
                <div class="log-item">
                    <p><strong>Date:</strong> {{this.createdAt}}</p>
                    <p><strong>Account:</strong> {{this.userName}}</p>
                    <p><strong>Action:</strong> {{this.action}}</p>
                    {{#if this.productId}}
                        <p><strong>Product ID:</strong> <span class="product-id">{{this.productId}}</span></p>
                    {{/if}}
                    {{#if this.product}}
                        <p><strong>Product:</strong> {{this.product}}</p>
                    {{/if}}
                    {{#if this.amount}}
                        <p><strong>Amount:</strong> {{this.amount}}</p>
                    {{/if}}
                    {{#if this.maxLimit}}
                        <p><strong>Set Limit:</strong> {{this.maxLimit}}</p>
                    {{/if}}
                    {{#if this.unit}}
                        <p><strong>Unit:</strong> {{this.unit}}</p>
                    {{/if}}
                    {{#if this.category}}
                        <p><strong>Category:</strong> {{this.category}}</p>
                    {{/if}}
                </div>
            {{/each}}
        </div>
    </main>

    <script>
        document.querySelectorAll('.product-id').forEach(span => {
            span.textContent = span.textContent.substring(0, 10);
        });

        function search() {
            // Get the search input value
            const searchInput = document.getElementById('searchInput').value.toLowerCase();

            // Loop through each log item
            const logItems = document.querySelectorAll('.log-item');
            logItems.forEach(logItem => {
                // Get the text content of the log item
                const logText = logItem.innerText.toLowerCase();

                // Check if the log item contains the search input
                if (logText.includes(searchInput)) {
                    logItem.style.display = 'block'; // Show the log item
                } else {
                    logItem.style.display = 'none'; // Hide the log item
                }
            });
        }
    </script>
</body>
</html>
